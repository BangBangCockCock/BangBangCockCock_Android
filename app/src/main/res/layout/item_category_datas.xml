<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/img_recycler_datas"
            android:layout_width="100dp"
            android:layout_height="84dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_recycler_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/img_recycler_datas"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_recycler_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tv_recycler_title"
            app:layout_constraintLeft_toRightOf="@id/img_recycler_datas"
            android:text="date"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>



        <TextView
            android:id="@+id/tv_recycler_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/img_recycler_datas"
            android:text="####"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"/>



        <Button
            android:id="@+id/btn_recycler_tag"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="D-7"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:lineSpacingExtra="6sp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_dday"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>